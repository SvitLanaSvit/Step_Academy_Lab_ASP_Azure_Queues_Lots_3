@model AzureLot

<h2 class="alert alert-primary">Do you really want to buy this lot?</h2>

<div>
    <h4>Lot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Currency)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Currency)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.SellerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.SellerName)
        </dd>
    </dl>

    <form asp-action="BuyConfirmed">
        <input type="hidden" asp-for="@Model.MessageId" />
        <input type="submit" value="Buy" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to menu</a>
    </form>
</div>